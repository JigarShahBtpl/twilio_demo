<%= form_tag(sessions_path, method: "post", class: "form-horizontal") do %>
  <div class="form-group">
    <%= label_tag :email, "Email", class: "col-md-2 control-label" %>
    <%= text_field_tag :email, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password", class: "col-md-2 control-label" %>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-success" %>
  </div>
<% end %>
