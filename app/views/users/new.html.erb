<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "First name", class: "col-md-2 control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email", class: "col-md-2 control-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, "Phone number", class: "col-md-2 control-label" %>
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password", class: "col-md-2 control-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm password", class: "col-md-2 control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Sign Up", class: "btn btn-success" %>
  </div>
<% end %>
